{
  "name": "@gnosis.pm/dex-js",
  "version": "0.1.4",
  "description": "dFusion JS integration: utils, contracts and other goodies",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gnosis/dex-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gnosis/dex-js.git"
  },
  "scripts": {
    "build": "rimraf build && ttsc && cp -r src/contracts/gen build/contracts/",
    "test": "jest",
    "clean": "rimraf build",
    "prepublish": "npm run clean && npm run build",
    "test-coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint --fix . --ext .ts,.js",
    "verify": "npm run lint && npm run test",
    "sandbox": "DEBUG=ERROR-*,WARN-*,INFO-*,DEBUG-*,-DEBUG-helper*,-DEBUG-util* nodemon -r dotenv/config -r tsconfig-paths/register",
    "abi": "node src/helpers/fetchAbis.js",
    "contracts": "rimraf \"src/contracts/gen/*.d.ts\" && npm run abi && npx typechain --target=web3-v1 --outDir src/contracts/gen \"src/contracts/abi/*.json\" && prettier --write src/contracts/gen/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run verify"
    }
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "eslintIgnore": [
    "src/contracts/gen"
  ],
  "peerDependencies": {
    "web3": "^1.2.4"
  },
  "dependencies": {
    "@gnosis.pm/dex-contracts": "^0.1.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.22",
    "@types/node": "^13.1.4",
    "@types/web3": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "coveralls": "^3.0.7",
    "debug": "^4.1.1",
    "dotenv": "^8.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "nodemon": "^2.0.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.8",
    "typechain": "^1.0.3",
    "typechain-target-web3-v1": "^1.0.4",
    "typescript": "^3.7.3",
    "typescript-transform-paths": "^1.1.13",
    "web3": "^1.2.4"
  }
}
